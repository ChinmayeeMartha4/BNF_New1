<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_theme_color"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/toolbar_color"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivTitleBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:elevation="2dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_theme_color"
    android:padding="6dp"
    android:scrollbars="none"
    android:layout_below="@+id/cvTitleBar"
    tools:context=".PregnantWomenBaseline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pregnant Women Baseline"
            android:layout_marginBottom="3dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="2dp"
            android:background="#67A687" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Name"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtHusbandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Husband Name"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtHusbandName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtVillageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Village Name"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtVillageName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtBlockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Block Name"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtBlockName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtDistrictName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="District Name"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtDistrictName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Contact Number"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtContact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true" />
    </LinearLayout>

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age(In years)"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/spnAge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:drawSelectorOnTop="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            >

            <Spinner
                android:id="@+id/spnEducation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:drawSelectorOnTop="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtOccupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/spnOccupation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:drawSelectorOnTop="true" />
        </RelativeLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHusbandAlive"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Husband alive"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp"
            />

        <RadioGroup
            android:id="@+id/rgHusbandAlive"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
        <RadioButton
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Yes"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <RadioButton
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="No"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        </RadioGroup>

    </LinearLayout>

        <TextView
            android:id="@+id/txtNoOfChildren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="No of Children"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtNoOfChildren"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtNoOfGirls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="No of Girls"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtNoOfGirls"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtNoOfBoys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="No of Boys"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtNoOfBoys"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtMotherInLaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Mother in law"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtMotherInLaw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtFatherInLaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Father in Law"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etxtFatherInLaw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textCapSentences"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtFamilyIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family Income(per month)"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/spnFamilyIncome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:drawSelectorOnTop="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSourceOfIncome"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Source of income"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                />

            <RadioGroup
                android:id="@+id/rgSourceOfIncome"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <RadioButton
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="Agriculture"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

                <RadioButton
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="Daily Wage Labour"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Next"
            android:layout_marginBottom="30dp"
            android:textSize="20dp"/>




    </LinearLayout>


</ScrollView>
</RelativeLayout>