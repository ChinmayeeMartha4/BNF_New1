<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".NewCode.SuposhanSakhiRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:drawableRight="@drawable/ic_baseline_star_24"
            android:textColor="#000"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:inputType="" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_name"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Mobile number"
            android:textColor="#F31010"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"  />

        <LinearLayout
            android:id="@+id/ll_tv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mobile"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="Image"
                android:textColor="#F31010"
                android:textSize="14dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:paddingRight="5dp">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/img_1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_margin="20dp"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_suposhan_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/submitbutton"
                android:backgroundTint="@drawable/button_background"
                android:text="@string/submit"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAllCaps="false"
                android:padding="10dp"
                android:layout_marginHorizontal="5dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>