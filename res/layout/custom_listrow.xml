<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_sel"
    android:orientation="horizontal"
    android:padding="2dp" >

    <!-- android:background="@drawable/customshap" -->
    <!-- android:background="@drawable/corner_image_frame" -->

    <RelativeLayout
        android:id="@+id/rel_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/image_bg"
        android:padding="3dip"
        android:visibility="gone"
         >

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bicon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/rel_imgview"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txttop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="house no"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtmiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="middle"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtbottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="bottom"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House Number"
                android:textColor="#000"
                android:textSize="2sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtfield1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="no"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtfield2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="name"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtfield3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="aadhaar"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtfield4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aadhaar"
                android:textColor="#000"
                android:textSize="2sp" 
                android:visibility="invisible"/>
        </LinearLayout>

        <!--
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtbottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginLeft="20dp"
                android:text="bottom"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txtBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginLeft="20dp"
                android:text="txtmother"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
        -->
    </LinearLayout>

</RelativeLayout>